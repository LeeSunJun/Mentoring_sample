<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="testcom.myapplication.MainActivity">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button1"
        android:textSize="30dp"
        android:textColor="#FFFF0000"
        android:onClick="bt1_clicked"/>

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:text="Button1"
        android:textSize="30dp"
        android:textColor="#FF00FF00"
        android:onClick="bt2_clicked"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt2"
        android:text="Button1"
        android:textSize="30dp"
        android:textColor="#FF0000FF"
        android:onClick="bt3_clicked"/>

    <TextView
        android:id="@+id/t_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:text="NOTHING"
        android:layout_below="@+id/bt3"/>

    <TextView
        android:id="@+id/t_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_below="@+id/t_box"/>

    <EditText
        android:id="@+id/t_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_count"
        android:hint="input 8words"
        android:textSize="18dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_count"
        android:layout_toRightOf="@+id/t_edit"
        android:text="GO"
        android:onClick="Go_Clicked"/>

</RelativeLayout>
